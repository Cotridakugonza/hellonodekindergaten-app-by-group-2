//- Main Content Area
.main-content
  .container
    h1 Register Produce
    form(method="POST", action="/submit-produce")
  h2 Produce Procurement Form

  //- Name of Produce
  label(for="produceName") Name of Produce:
  input#produceName(type="text", name="produceName", required)

  //- Type of Produce
  label(for="produceType") Type of Produce:
  input#produceType(type="text", name="produceType", pattern="[A-Za-z]{2,}", title="Alphabet only, min 2 characters", required)

  //- Date
  label(for="produceDate") Date:
  input#produceDate(type="date", name="produceDate", required)

  //- Time of Produce
  label(for="produceTime") Time of Produce:
  input#produceTime(type="time", name="produceTime", required)

  //- Tonnage in Kgs
  label(for="tonnage") Tonnage (kgs):
  input#tonnage(type="number", name="tonnage", min="100", title="Minimum 3 digits", required)

  //- Cost in UgX
  label(for="cost") Cost (UgX):
  input#cost(type="number", name="cost", min="10000", title="Minimum 5 digits", required)

  //- Name of Dealer
  label(for="dealerName") Dealer Name:
  input#dealerName(type="text", name="dealerName", pattern="[A-Za-z0-9]{2,}", title="Alphanumeric, at least 2 characters", required)

  //- Branch Name (Assuming a dropdown of known branches)
  label(for="branch") Branch Name:
  select#branch(name="branch", required)
    option(value="") -- Select Branch --
    option(value="Matugga") Matugga
    option(value="Maganjo") Maganjo
   

  //- Contact
  label(for="contact") Contact (Phone):
  input#contact(type="tel", name="contact", pattern="^\+256\d{9}$", title="Format: +256XXXXXXXXX", required)

  //- Price to be Sold At
  label(for="sellPrice") Price to be Sold At (UgX):
  input#sellPrice(type="number", name="sellPrice", min="1", required)

  //- Submit Button
  button(type="submit") Submit
