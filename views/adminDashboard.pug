meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title  Managers Dashboard - KGL
link(rel="stylesheet", href="/css/admin.css")
link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")

.sidebar
  .sidebar-header
    h2 Karibu Groceries Ltd
  ul.sidebar-menu
    li.active
      a(href="/admin")
        i.fas.fa-home
        span Dashboard
    li
      a(href="/addProduce")
        i.fas.fa-user-plus
        span Register Produce
    li
      a(href="/productslist")
        i.fas.fa-users
        span Produce List
    li
      a(href="/Sales")
        i.fas.fa-clipboard-check
        span Sales
    li
      a(href="/reports")
        i.fas.fa-chart-bar
        span Reports
    li
      a(href="/settings")
        i.fas.fa-cog
        span Settings
    li
      a(href="/")
        i.fas.fa-sign-out-alt
        span Logout

.main-content
  .header
    h1 Dashboard
    .welcome-message
      i.fas.fa-user-shield
      span Welcome, Manager!
  
  .stats-container
    .stat-card
      .stat-icon(style="background-color: #2e8b57;")
        i.fas.fa-child
      .stat-info
        h3 Total produce
        p#totalChildren 142
    .stat-card
      .stat-icon(style="background-color: #3cb371;")
        i.fas.fa-baby
      .stat-info
        h3 New This Month
        p#newChildren 18
    .stat-card
      .stat-icon(style="background-color: #ffa500;")
        i.fas.fa-chalkboard-teacher
      .stat-info
        h3 Classes
        p 5
    .stat-card
      .stat-icon(style="background-color: #3498db;")
        i.fas.fa-calendar-alt
      .stat-info
        h3 Upcoming Events
        p 2
  
  .recent-activity
    h2 
      i.fas.fa-history
      span Recent Activity
    .activity-list
      .activity-item
        .activity-icon
          i.fas.fa-user-plus
        .activity-details
          strong New Restock: 
          | Beans (Kiberu Dealers)
          .activity-time 2 hours ago
      .activity-item
        .activity-icon
          i.fas.fa-edit
        .activity-details
          strong Out of Stock: 
          | Peas (Totally Out of Stock)
          .activity-time Yesterday, 3:45 PM
      .activity-item
        .activity-icon
          i.fas.fa-check-circle
        .activity-details
          strong Up coming Restock: 
          | Beans and peas (Akwagala Dealers)
          .activity-time Today, 9:15 AM
      .activity-item
        .activity-icon
          i.fas.fa-exclamation-triangle
        .activity-details
          strong Creditors: 
          | 5 customers with pending amounts
          .activity-time 2 days ago
  
  .quick-actions
    h2
      i.fas.fa-bolt
      span Quick Actions
    .action-buttons
        i.fas.fa-user-plus
        span Register Produce
    a.action-btn(href="/addProduce")
        i.fas.fa-user-plus
        span Produce List
    a.action-btn(href="/productslist")
        